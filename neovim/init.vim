filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set number
set showcmd
set showmatch
set ruler
set splitbelow
set splitright
set guicursor=i-ci-r-cr-sm:block-blinkon1,n-v:block-blinkon0

nmap <C-v> :vert new<CR>
nmap <C-n> :new<CR>
nmap <C-t> :tabnew<CR>
nmap <C-e> :Explore<CR>
nmap <A-v> :vert new 
nmap <A-n> :new 
nmap <A-t> :tabnew 
nmap <A-e> :Explore 
nmap ; :
nmap <C-q> :quit<CR>
nmap <A-q> :quit 

com InsBashHeader :0r ~/Templates/bash_header_template.v1
com InsAuthor :r ~/Templates/author.v1
com InsDate :r !date +'\%B \%d, \%Y'

colo amazing_sunset
